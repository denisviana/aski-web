@{
    ViewBag.Title = "Home Page";
}


<div >

    <form class="col s11 m9 l4" id="msform">

        <fieldset id="fs-1">

            <div class="col s12">
                <h6 class="center-align"><b>Cadastro</b></h6>
            </div>

            <div class="input-field col s12">
                <input class="validate" type="text" id="name" name="name">
                <label for="name">Nome Completo</label>
            </div>

            <div class="input-field col s12">
                <input class="validate" type="email" id="email" name="email">
                <label for="email">E-mail</label>
            </div>

            <div class="input-field col s12">
                <input class="validate" type="password" id="pass" name="pass">
                <label for="pass">Senha</label>
            </div>

            <div class="input-field col s12" style="margin-bottom: 10px;">
                <input type="password" id="confirm_pass" name="confirm_pass">
                <label for="configm_pass">Confirme a senha</label>
            </div>

            <label class="col s12 m6 l6 cb_container">
                <input type="checkbox" id="cb_1" name="cb_1" class="filled-in require-one" value="true" checked="checked">
                <span>Quero ajuda</span>
            </label>

            <label class="col s12 m6 l6 cb_container">
                <input type="checkbox" id="cb_2" name="cb_2" class="filled-in require-one" value="true"s>
                <span>Vou ajudar alguém</span>
            </label>

            <div class="helper-text" id="cb_error" name="cbs"></div>

            <button class="next waves-effect waves-light btn center-align" type="button" name="next" id="next-fs1" style="margin-top: 20px;">
                Próximo
            </button>

        </fieldset>

        <fieldset id="fs-2">

            <div class="col s12">
                <h6 class="center-align" style="margin-bottom: 15px;"><b>Quais matérias você tem dificuldades?</b></h6>
            </div>

            <div class="input-field col s12">
                <select>
                    <option value="" disabled selected>Selecione seu curso</option>
                    <option value="1">Sistemas de Informação</option>
                    <option value="2">Ciência da Computação</option>
                    <option value="3">Engenharia Civil</option>
                </select>
                <label>Curso</label>
            </div>

            <div class="col s12">
                <div class="chips chips-placeholder chips-autocomplete" id="chips-want-be-helped"></div>
            </div>

            <button class="next waves-effect waves-light btn center-align" type="button" name="next" style="margin-top: 20px;">
                Próximo
            </button>
        </fieldset>

        <fieldset id="fs-3">

            <div class="col s12">
                <h6 class="center-align" style="margin-bottom: 15px;"><b>Ajude outros universitários, informe as disciplinas que você domina.</b></h6>
            </div>

            <div class="col s12">
                <div class="chips chips-placeholder chips-autocomplete" id="chips-want-to-help"></div>
            </div>

            <button class="next waves-effect waves-light btn center-align" type="submit" name="next" style="margin-top: 20px;">
                Finalizar
            </button>
        </fieldset>

    </form>
</div>

