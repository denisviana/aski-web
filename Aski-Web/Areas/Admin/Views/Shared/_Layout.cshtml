<!DOCTYPE html>
<html lang="pt-br">
<head>

    <title>ASKI - Admin</title>

    <link type="text/css" rel="stylesheet" href="~/Content/mdl-v1.1.2/material.min.css" />
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.teal-red.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://fonts.googleapis.com/css?family=Comfortaa:700" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link type="text/css" href="~/Content/css/style.css" rel="stylesheet" />

</head>

<body>


    <div class="mdl-layout__container">

        <div class="mdl-layout mdl-layout--fixed-drawer mdl-layout--fixed-header has-drawer is-upgraded">


            <header class="mdl-layout__header is-casting-shadow mdl-color--grey-100 mdl-color-text--blue-grey-600">
                <div aria-expanded="false" role="button" tabindex="0" class="mdl-layout__drawer-button"><i class="material-icons">menu</i></div>
                <div class="mdl-layout__header-row">
                    <span class="mdl-layout-title">Usuários</span>
                    <div class="mdl-layout-spacer"></div>
                </div>
            </header>

            <div class="mdl-layout__drawer drawer-menu is-casting-shadow">

                <div class="drawer-menu-header">
                    <img src="~/Content/img/logo-simbolo-branco-vertical.png" class="drawer-menu-logo" />
                </div>
                <hr />
                <nav class="mdl-navigation">
                    <a class="mdl-navigation__link mdl-color-text--primary-dark" href="#">
                        <i class="mdl-color-text--primary-dark material-icons" role="presentation">face</i>Usuários
                    </a>
                    <a class="mdl-navigation__link mdl-color-text--primary-dark" href="#">
                        <i class="mdl-color-text--primary-dark material-icons" role="presentation">list</i>Assuntos
                    </a>
                </nav>
            </div>

            <main class="mdl-layout__content">
                <div class="mdl-grid content">
                    @RenderBody()
                </div>
            </main>

        </div>

    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/materialize/materialize.min.js"></script>
    <script src="~/Content/mdl-v1.1.2/material.min.js"></script>

</body>
</html>